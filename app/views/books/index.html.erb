<main>
  <p id="notice"></p>
  <div class="container">
  <div class="row">
   <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>

    <table class=table>
        <tbody>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
            </tr>

        </tbody>
    </table>

    <div class ="row">
        <!--設定マークの部分-->
    </div>

    <h2 class="mt-3">New book</h2>

    <%= form_with model: @book do |f| %>

    <label for"book_tatle">Title</label>
      <br><%= f.text_field :title %>

      <br><label for="book_opinion">Opinion</label>
      <br><%= f.text_area :body %>

      <div class="forom-group"></div>
      <br> <%= f.submit 'Create Book' %>
    <% end %>
　</div>
    <div class="col-md8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th clospan="3"></th>
          </tr>
        </thead>

       <tbody>
          <% @books.each do |book| %>
         <tr>
           <td>
             <%= link_to user_path(book.user) do %>
               <%= image_tag book.user.get_profile_image(100,100) %>
             <% end %>

           </td>
           <td>
             <%= link_to book_path(book.id) do %>
               <%= book.title %>
             <% end %>

           </td>
           <td><%= book.body %></td>

         </tr>
         <% end %>
       </tbody>
      </table>
   　</div>
  </div>
</main>