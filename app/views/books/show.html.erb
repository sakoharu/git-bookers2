<%= flash[:notice] %>
  <div class="container">
  <div class="row">
   <div class="col-md-3">
 <%= render 'side', user: @user %>
   </div>

<div class= "col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %>
          <br>
          <%= link_to @user.name, user_path(@user.id) %>
          </br>
        </td>
        <td>
          <%= link_to @book.title, book_path(@book.id) %>
        </td>
        <td> <%= @book.body %> </td>
        <td>
            <% if @book.user == current_user %>
            <%= link_to 'Edit', edit_book_path(@book.id), class:"btn-sm btn-success" %>
            <% end %>
        </td>
        <td>
            <% if @book.user == current_user %>
             <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger deleter"%>
            <% end %>
        </td>

      </tr>
     </tbody>
    </table>
  </div>
 </div>
</div>



