
<div>
<%= flash[:notice] %>
</div>


<p id="notice"></p>
  <div class="container">
  <div class="row">
   <div class="col-md-3">
<%= render 'books/side', user: @user, book: @book_new %>
</div>



<div class= "col-md-8 offset-md-1">
  <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
           <th></th>
           <th>image</th>
           <th>name</th>
           <th clospan="3"></th>
          </tr>
        </thead>

       <tbody>
          <% @books.each do |book| %>
         <tr>
           <td>
             <%= link_to user_path(book.user) do %>
               <%= image_tag book.user.get_profile_image(100,100) %>
             <% end %>

           </td>
           <td>
             <%= link_to book_path(book.id) do %>
               <%= book.title %>
             <% end %>

           </td>
           <td><%= book.body %></td>

         </tr>
         <% end %>
       </tbody>
      </table>
  </div>
 </div>
</div>